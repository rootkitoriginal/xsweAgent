# GitHub API Configuration
GITHUB_TOKEN=your_github_personal_access_token_here
GITHUB_REPO_OWNER=xLabInternet
GITHUB_REPO_NAME=xRatEcosystem

# Google Gemini AI Configuration
GEMINI_API_KEY=your_google_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash

# MCP Server Configuration
MCP_SERVER_HOST=localhost
MCP_SERVER_PORT=8000
MCP_SERVER_DEBUG=true

# Application Settings
APP_NAME=xSwE Agent
APP_VERSION=1.0.0
APP_DESCRIPTION=GitHub Issues Monitor & Analytics with Gemini AI

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=structured
LOG_FILE=logs/xswe_agent.log

# Cache Configuration
CACHE_TYPE=memory  # Options: memory, redis, file
CACHE_TTL=3600  # Time to live in seconds
REDIS_URL=redis://localhost:6379/0

# Analytics Configuration
ANALYTICS_UPDATE_INTERVAL=3600  # Update interval in seconds
ANALYTICS_HISTORY_DAYS=90  # Days of history to analyze
ANALYTICS_CHART_THEME=plotly_white

# Rate Limiting
GITHUB_RATE_LIMIT_PER_HOUR=5000
GEMINI_RATE_LIMIT_PER_MINUTE=60

# Monitoring & Health Checks
HEALTH_CHECK_INTERVAL=300  # Health check interval in seconds
METRICS_ENABLED=true
PROMETHEUS_PORT=9090

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
API_KEY_EXPIRATION_HOURS=24

# Development Settings
DEBUG=true
DEVELOPMENT_MODE=true
RELOAD_ON_CHANGES=true

# Database (Optional - for persistence)
DATABASE_URL=sqlite:///./xswe_agent.db
DB_ECHO_QUERIES=false

# Notification Settings (Future)
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=
EMAIL_SMTP_SERVER=
EMAIL_USERNAME=
EMAIL_PASSWORD=